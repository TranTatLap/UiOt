<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:text="Add configuration items"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_config_item"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/tv_title"/>
    <Button
        android:id="@+id/btn_add_configuration"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:text="ADD"
        android:textColor="@color/bg"
        android:layout_below="@+id/rv_config_item"
        android:layout_alignParentRight="true"/>


    <Button
        android:id="@+id/btn_cancel_configuration"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:text="CANNCEL"
        android:textColor="@color/bg"
        android:layout_below="@+id/rv_config_item"
        android:layout_toLeftOf="@+id/btn_add_configuration"/>


</RelativeLayout>